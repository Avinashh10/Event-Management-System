<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Book Event</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Event Manager</a>
      <div class="d-flex">
        <a href="/dashboard" class="btn btn-outline-light me-2">Dashboard</a>
        <a href="/logout" class="btn btn-light">Logout</a>
      </div>
    </div>
  </nav>

  <!-- Booking Form -->
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card shadow-lg border-0">
          <div class="card-body">
            <h1 class="mb-4 text-center">Book Seats for <%= event.title %></h1>

            <% if (event.availableSeats > 0) { %>
              <p class="text-muted text-center mb-4">
                <strong>Available Seats:</strong> 
                <span class="badge bg-success"><%= event.availableSeats %></span>
              </p>

              <form action="/events/<%= event._id %>/bookings" method="POST">
                <input type="hidden" name="eventId" value="<%= event._id %>">

                <div class="mb-3">
                  <label for="seats" class="form-label">Number of Seats</label>
                  <input 
                    type="number" 
                    class="form-control" 
                    name="seats" 
                    id="seats" 
                    min="1" 
                    max="<%= event.availableSeats %>" 
                    required>
                </div>
                <div class="d-flex justify-content-between">
                  <a href="/dashboard" class="btn btn-secondary">Back</a>
                  <button type="submit" class="btn btn-primary">Book Now</button>
                </div>
              </form>
            <% } else { %>
              <div class="alert alert-danger text-center">
                <h4 class="alert-heading">Seats Full!</h4>
                <p>Sorry, no seats are available for this event.</p>
                <a href="/dashboard" class="btn btn-secondary mt-3">Back to Dashboard</a>
              </div>
            <% } %>
            
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
