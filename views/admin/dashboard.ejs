<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="p-4">

<!-- Header with Welcome and Logout Link -->
<div class="d-flex justify-content-between align-items-center mb-3">
  <h1>Welcome, <%= user.name %>!</h1>
  <a href="/logout" class="btn btn-outline-danger">Logout</a>
</div>

<!-- Create Event Button -->
<a href="/admin/events/create" class="btn btn-primary mb-3">Create Event</a>

<!-- Events Table -->
<h2>Events</h2>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>Seats</th>
      <th>Price</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% events.forEach(event => { %>
      <tr class="<%= event.status === 'canceled' ? 'table-danger' : '' %>">
        <td><%= event.title %></td>
        <td><%= event.date.toDateString() %></td>
        <td><%= event.totalSeats %></td>
        <td>â‚¹<%= event.price %></td>
        <td>
          <% if(event.status === 'active'){ %>
            <span class="badge bg-success">Active</span>
          <% } else { %>
            <span class="badge bg-danger">Canceled</span>
          <% } %>
        </td>
        <td>
          <a href="/admin/events/<%= event._id %>/edit" class="btn btn-warning btn-sm">Edit</a>

          <% if(event.status === 'active'){ %>
            <form action="/admin/events/<%= event._id %>/cancel" method="POST" style="display:inline;">
              <button class="btn btn-danger btn-sm">Cancel</button>
            </form>
          <% } else { %>
            <form action="/admin/events/<%= event._id %>/reactivate" method="POST" style="display:inline;">
              <button class="btn btn-success btn-sm">Reactivate</button>
            </form>

            <!-- Delete Button triggers Modal -->
            <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal<%= event._id %>">
              Delete
            </button>

            <!-- Delete Modal -->
            <div class="modal fade" id="deleteModal<%= event._id %>" tabindex="-1" aria-labelledby="deleteModalLabel<%= event._id %>" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel<%= event._id %>">Confirm Deletion</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                    Are you sure you want to delete the canceled event "<%= event.title %>"?
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form action="/admin/events/<%= event._id %>/delete" method="POST" style="display:inline;">
                      <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          <% } %>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

<!-- Users Table -->
<h2>Users</h2>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% users.forEach(u => { %>
      <tr>
        <td><%= u.name %></td>
        <td><%= u.email %></td>
        <td><%= u.role %></td>
        <td>
          <% if(u.role === 'user'){ %>
            <form action="/admin/users/<%= u._id %>/promote" method="POST" style="display:inline;">
              <button class="btn btn-success btn-sm">Promote to Staff</button>
            </form>
          <% } else if(u.role === 'staff'){ %>
            <form action="/admin/users/<%= u._id %>/demote" method="POST" style="display:inline;">
              <button class="btn btn-warning btn-sm">Demote to User</button>
            </form>
          <% } %>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
