<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Attendees for <%= event.title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">

    <div class="d-flex justify-content-between mb-3">
      <h2>Attendees for <%= event.title %></h2>
      <a href="/staff/dashboard" class="btn btn-secondary">Back to Dashboard</a>
    </div>

    <table class="table table-bordered mt-3">
      <thead class="table-dark">
        <tr>
          <th>Username</th>
          <th>Email</th>
          <th>Booking Status</th>
          <th>Payment Status</th>
        </tr>
      </thead>
      <tbody>
        <% if(attendees.length === 0) { %>
          <tr>
            <td colspan="4" class="text-center">No attendees yet</td>
          </tr>
        <% } else { %>
          <% attendees.forEach(att => { %>
            <tr>
              <td><%= att.user.name %></td>
              <td><%= att.user.email %></td>
              <td><%= att.status %></td>
              <td><%= att.paymentStatus %></td>
            </tr>
          <% }) %>
        <% } %>
      </tbody>
    </table>

  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
