<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>User Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">User Dashboard</a>
      <div class="d-flex">
        <a href="/logout" class="btn btn-outline-light">Logout</a>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="container mt-5">
    <div class="card shadow-lg border-0">
      <div class="card-body text-center">
        <h1 class="card-title">Welcome, <%= user.name %> ðŸ‘‹</h1>
        <p class="text-muted">Hereâ€™s your account information</p>

        <ul class="list-group list-group-flush mt-3 mb-3">
          <li class="list-group-item"><strong>Email:</strong> <%= user.email %></li>
          <li class="list-group-item"><strong>Role:</strong> 
            <span class="badge bg-info text-dark"><%= user.role %></span>
          </li>
        </ul>

        <!-- Booking Actions -->
        <div class="d-flex justify-content-center gap-3 mt-4">
          <!-- âœ… View my bookings (fixed route) -->
          <a href="/booking/my" class="btn btn-success">My Bookings</a>

          <!-- âœ… Create a booking for an event -->
          <% if (events && events.length > 0) { %>
            <div class="dropdown">
              <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                Book an Event
              </button>
              <ul class="dropdown-menu">
                <% events.forEach(event => { %>
                  <li>
                    <a class="dropdown-item" href="/events/<%= event._id %>/bookings/create">
                      <%= event.title %> 
                    </a>
                  </li>
                <% }) %>
              </ul>
            </div>
          <% } else { %>
            <span class="text-muted">No events available to book</span>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
